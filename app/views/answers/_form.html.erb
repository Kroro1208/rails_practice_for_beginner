<%= form_with(model: [@question, @answer], local: true) do |form| %>
  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body, class: 'form-control'%>
  </div>

  <div class="form-group">
    <%= form.submit '更新する', class: 'btn btn-primary' %>
  </div>
<% end %>

<%= link_to '戻る', question_path(@question) %>